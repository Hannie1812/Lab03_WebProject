@model Category

<h2>Chi tiết danh mục: @Model.Name</h2>

<h3>Danh sách sản phẩm</h3>
@if (ViewBag.Products != null && ViewBag.Products.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th><input type="checkbox" id="selectAll" /></th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in ViewBag.Products)
            {
                <tr>
                    <td><input type="checkbox" name="selectedProducts" value="@product.Id" class="product-checkbox" /></td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.Category?.Name</td>
                    <td>
                        <img src="@product.ImageUrl" alt="Product Image" style="width: 100px; height: auto;" />
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-light me-2" asp-controller="Product" asp-action="Display" asp-route-id="@product.Id">
                                <i class="fa fa-eye"></i> View
                            </a>
                            <a class="btn btn-warning me-2" asp-controller="Product" asp-action="Update" asp-route-id="@product.Id">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a class="btn btn-danger me-2" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
                                <i class="fa fa-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">Product not found.</p>
}

<a href="@Url.Action("Index", "Category")" class="btn btn-outline-warning mt-3">Quay lại</a>
